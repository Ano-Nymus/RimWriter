    <tags>
      <li>ClassicStart</li>
    </tags>
	<researchViewX>1</researchViewX>
	<researchViewY>1.5</researchViewY>
	<tab>RimWriter_ResearchTab</tab>	
  </ResearchProjectDef> 
  
  <!-- Industrial -->  

  <ResearchProjectDef>
    <defName>RimWriter_TechTypewriting</defName>
